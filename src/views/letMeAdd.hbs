<section id="#addAProductForm">
    <form action="../controllers/addProduct">
        <label for="productName">Product Name: </label>
        <input id="productName" name="product_name">
        <label for="productDescription">Product Description: </label>
        <input id="productDescription" name="product_description">
        <label for="cravingID">Choose a craving: </label>
        <select id="cravingID" name="craving_id">
            <option value=1>Cheese</option>
            <option value=2>Meat</option>
            <option value=3>Milk</option>
            <option value=4>Sweet</option>
        </select>
        <label for="whereToBuy">Where can you buy this?</label>
        <input id="whereToBuy" name="where_to_buy">
        <label for="productImage">Product Image URL: </label>
        <input id="productImage" name="product_image">
        <label for="price">Product Price</label>
        <input type="number" step="0.01" min="0.01" id="price" name="product_price">
        <input type="submit">
    </form>
</section>
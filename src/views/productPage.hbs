<section class="product-page">
    <h3 id="product-title">{{chosenProduct.product_name}}</h3>

    <img src={{chosenProduct.product_image}} />

    <article class="result-rating">{{returnAverageRating ratings}}</article>

    <p class="product-para">
        {{#each chosenProduct.where_to_buy}}
        {{this}},
        {{/each}}
    </p>

    <p class="product-para">Price: {{chosenProduct.product_price}}</p>

    <p class="product-para">{{chosenProduct.product_description}}</p>

    <form action="/submitrating/{{chosenProduct.id}}" method="POST">
        <label for="rating">Rating</label>
        <select id="rating" name="rating">
            <option value=1>⭐</option>
            <option value=2>⭐⭐</option>
            <option value=3>⭐⭐⭐</option>
            <option value=4>⭐⭐⭐⭐</option>
            <option value=5>⭐⭐⭐⭐⭐</option>
        </select>
        <label for="comment">Comment: </label>
        <input id="comment" type="text" name="comment">

        <input type="submit">
    </form>
    <section>
        {{#each ratings}}
        <article class="product-comment-card">
            <p>{{this.comment}}</p>
            <p>Rating: <span class="result-rating">{{this.rating}}</span></p><br>
            <p>UpVotes: <span id='upvotes-{{this.id}}'>{{this.votes}}</span></p>
            <button id='upvote-button-{{chosenProduct.id}}-{{this.id}}' class="upvote-button">Upvote</button>
        </article>
        {{/each}}
    </section>
</section>